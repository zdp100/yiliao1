@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/AdminTop.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Clock.js")" type="text/javascript"></script>
</head>
<body>
<div id="logo" style="background-image: url(@Url.Content("~/Content/images/logo.png")); background-repeat: no-repeat">
        <div style="padding-right: 50px; background-position: right 50%; display: block;
            padding-left: 0px; background-image: url(@Url.Content("~/Content/images/bg_banner_menu.gif")); padding-bottom: 0px;
            padding-top: 3px; background-repeat: no-repeat; height: 30px; text-align: right">
            
            <img src="@Url.Content("~/Content/images/menu_seprator.gif")" align="absMiddle">
            <a href="#" onclick="parent.location.href='/'">返回首页</a>
            <img src="@Url.Content("~/Content/images/menu_seprator.gif")" align="absMiddle">
            <a href="#" onclick="parent.location.href='/login/logout'">退出系统</a>
        </div>
        <div style="display: block; height: 54px">
        </div>
        <div style="background-image: url(@Url.Content("~/Content/images/bg_nav.gif")); background-repeat: repeat-x; height: 30px">
            <table cellspacing="0" cellpadding="0" width="100%">
                <tbody>
                    <tr>
                        <td>
                            <div>
                                <img src="@Url.Content("~/Content/images/nav_pre.gif")" align="absMiddle">
                                欢迎 <span id="lblBra">桂林电子科技大学</span> <span id="lblDep">校医院</span> [系统管理员 ] 光临
                            </div>
                        </td>
                        <td align="right" width="50%">
                            <span style="padding-right: 50px">
                                <a href="javascript:history.go(-1);"><img src="@Url.Content("~/Content/images/nav_back.gif")" align="absMiddle" border="0">后退</a> 
                                <a href="javascript:history.go(1);"><img src="@Url.Content("~/Content/images/nav_forward.gif")" align="absMiddle" border="0">前进</a> 
                                <a href="/login/logout"  target="_top"><img src="@Url.Content("~/Content/images/nav_changePassword.gif")" align="absMiddle" border="0">重新登录</a>
                                @*<a href="" target="mainFrame"><img src="@Url.Content("~/Content/images/nav_resetPassword.gif")" align="absMiddle" border="0">修改密码</a>*@
                                <img src="@Url.Content("~/Content/images/menu_seprator.gif")" align="absMiddle">
                                <span id="clock"></span>
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <script type="text/javascript">
        var clock = new Clock();
        clock.display(document.getElementById("clock"));
    </script>
