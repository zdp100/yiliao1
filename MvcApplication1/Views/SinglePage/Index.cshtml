@model IEnumerable<MvcApplication1.Models.SinglePageModels>

@{
    ViewBag.Title = ViewBag.strType;
}

<h2>@ViewBag.strType</h2>


<table class="gridview">
    <tr>
        <th>
            标题
        </th>
        <th>
            发布时间
        </th>
        <th>
            阅读量
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PubDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Count)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.ID }) |
            @if (ViewBag.strType == "就医指南")
            {
                @Html.ActionLink("详情", "TreatGuid", "qiantai", new {id = item.ID}, new {target = "new"})
            }
            else
            {
                @Html.ActionLink("详情", "HospitalCulture", "qiantai", new { id = item.ID }, new { target = "new" })
            }
 
        </td>
    </tr>
}

</table>
