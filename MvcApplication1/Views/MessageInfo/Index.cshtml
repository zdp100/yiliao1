@model IEnumerable<MvcApplication1.Models.MessageInfoModels>

@{
    ViewBag.Title = "Index";
}


<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            PubDate
        </th>
        <th>
            Users
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PubDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Users.UserName)
        </td>
        <td>
            @Html.ActionLink("编辑", "Edit", new { id=item.MessageID }) |
            @Html.ActionLink("详情", "OnlineConsultShow","qiantai", new { id=item.MessageID },new{target="new"}) |
            @Html.ActionLink("删除", "Delete", new { id=item.MessageID })
        </td>
    </tr>
}

</table>
