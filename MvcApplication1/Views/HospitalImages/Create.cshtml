@model MvcApplication1.Models.HospitalImagesModels

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<link href="@Url.Content("~/Scripts/uploadify/uploadify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/uploadify/jquery.uploadify-3.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/uploadify/UploadImages.js")" type="text/javascript"></script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>HospitalImagesModels</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Illustrate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Illustrate)
            @Html.ValidationMessageFor(model => model.Illustrate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ImageUrl)
        </div>
        <div class="editor-field">
            <div style="display:none;" id="ImageFile">
                <img src="" height="100"/>
            </div>
            <fieldset id="fieldset-image" style="display:none;">
                <legend>图片列表</legend>
            
                <div id="Up_file_queue">
                </div>
            </fieldset>
            @Html.HiddenFor(model=>model.ImageUrl)
            @Html.ValidationMessageFor(model => model.ImageUrl)
            <div style="height:40px;padding:10px 0 10px;">
                <div style="float:left; width:100px;"><input type="file" id="upload"/></div>
                <div style="float:left; width:100px;"></div>
                <input type="button" style="height:30px;width:80px;" value="上传" onclick="javascript:$('#upload').uploadify('upload','*')"/>
                <div style="clear:both"></div>

            </div>
            
            
            <div id="some_file_queue">
            </div>
        </div>
        @Html.Hidden("hideImageAdd")
        @Html.Hidden("hideImageDel")

        <div style="display:none;" id="image-hide">
            <div style="position:relative;display: inline-block;float:left;border:5px solid #faf0e6;margin-right:10px;margin-top:10px;"  class="image-queue-item">
                <div style="position:absolute;top:0;right:0" class="cancel">
                    <a href="javascript:void(0);">X</a>
                </div>
                <div style="position:absolute;top:0;left:0" class="fengmian">
                    <a href="javascript:void(0);">做封面</a>
                </div>
                <img class="img" src="" height="120"/>
               <div style="position:absolute;left:0;bottom:0;" class="wenzi"></div>
            </div>

        </div>
        <p>
            <input type="submit" value="创建" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
